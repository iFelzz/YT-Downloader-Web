# Environment Variables
# Copy this file to .env and configure the values

# ==========================================
# ADMIN CONFIGURATION
# ==========================================

# Admin API Key untuk akses admin endpoints
# Generate dengan: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your_secure_api_key_here

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server port (default: 3000)
PORT=3000

# Node Environment (development/production)
NODE_ENV=development

# ==========================================
# HTTPS CONFIGURATION (Optional)
# ==========================================

# Enable HTTPS (set to 'true' to enable)
USE_HTTPS=false

# SSL Certificate paths (required if USE_HTTPS=true)
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================

# API requests per 15 minutes (default: 100)
RATE_LIMIT_API_MAX=100

# Download requests per hour per IP (default: 10)
RATE_LIMIT_DOWNLOAD_MAX=10

# Admin requests per 15 minutes (default: 60)
RATE_LIMIT_ADMIN_MAX=60

# ==========================================
# DOWNLOAD CONFIGURATION
# ==========================================

# Maximum concurrent downloads (default: 2)
DOWNLOAD_CONCURRENT_MAX=2

# Maximum queue size (default: 50)
DOWNLOAD_QUEUE_MAX=50

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log retention in days (default: 30)
LOG_RETENTION_DAYS=30

# Maximum log file size (default: 20m)
LOG_MAX_SIZE=20m
